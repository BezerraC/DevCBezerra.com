<IfModule mod_rewrite.c>

# Bloqueando a listagem dos diretórios sem um documento padrão (index.html, index.php, default.asp, etc.).

Options -Indexes

# Habilita o Mod-Rewrite

RewriteEngine On

# Criamos uma condição para que os arquivos sejam ignorados nas regras abaixo

RewriteCond %{REQUEST_FILENAME} !-f

# Criamos uma condição para que diretórios sejam ignorados nas regras abaixo

RewriteCond %{REQUEST_FILENAME} !-d

# Definimos onde começa a base das regras

RewriteBase /

# Ignoramos o uso de barra no final

RewriteRule ^(.+)\/?$ $1 [R,L]

# Criando Regras Fixas 

RewriteRule ^home$ index.html?rota=home [QSA,L,NC]

RewriteRule ^institucional$ index.html?rota=institucional [QSA,L,NC] 

# Criando Regras Dinâmicas

RewriteRule ^loja\/([0-9A-z_-]+)$ loja/produtos.html?rota=$1 [QSA,L,NC]

RewriteRule ^loja\/([0-9A-z_-]+)\/([0-9A-z_-]+)$ loja/produtos.html?rota=$1&item=$1 [QSA,L,NC]

RewriteRule ^loja\/([0-9A-z_-]+)\/([0-9A-z_-]+)\/([0-9A-z_-]+)$ loja/detalhes.html?rota=$1&item=$2&detalhe=$3 [QSA,L,NC]

# Definindo Páginas Personalizadas de Erro.

ErrorDocument 400 /errors/400.html

ErrorDocument 401 /errors/401.html

ErrorDocument 403 /errors/403.html

ErrorDocument 404 /errors/404.html

ErrorDocument 500 /errors/500.html

</IfModule>